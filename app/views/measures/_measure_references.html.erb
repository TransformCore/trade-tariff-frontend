<% if measure.has_measure_conditions? %>
<div class='conditions' id='<%= measure.id %>' data-popup='<%= measure.destination %>-<%= measure.id %>-conditions'>
  <article>
    <table class="small-table">
      <caption>
        <h2 class="heading-medium"><%= measure.measure_type.description %> for <%= measure.geographical_area.description %></h2>
      </caption>
      <thead>
        <tr>
          <th>Condition</th>
          <th>Document code</th>
          <th>Requirement</th>
          <th>Action</th>
          <th>Duty expression</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "measure_conditions/measure_condition", collection: measure.measure_conditions, locals: { measure: measure } %>
      </tbody>
    </table>
  </article>
</div>
<% end %>

<% if !measure.national? && measure.legal_acts.present? %>
  <div class='regulations' id='<%= measure.id %>' data-popup='<%= measure.id %>-regulations'>
    <article>
      <table class="small-table">
        <caption>
          <h2>Legal base</h2>
        </caption>
        <thead>
          <tr>
            <th>Regulation No.</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Publication date</th>
            <th>Journal No.</th>
            <th>Journal page</th>
          </tr>
        </thead>
        <tbody>
          <% measure.legal_acts.each do |legal_act| %>
            <tr>
              <td>
                <%= link_to legal_act.regulation_code, legal_act.regulation_url, target: '_blank', rel: 'external', class: 'print-link-without-description' %>
              </td>
              <td><%= legal_act.validity_start_date %></td>
              <td><%= legal_act.validity_end_date %></td>
              <td><%= legal_act.published_date %></td>
              <td><%= legal_act.officialjournal_number %></td>
              <td><%= legal_act.officialjournal_page %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </article>
  </div>
<% end %>

<% measure.footnotes.each do |footnote| %>
<div class='footnotes' id='<%= footnote.id %>' data-popup='<%= footnote.id %>'>
  <article>
    <table class="small-table">
      <caption>
        <h2 class="heading-medium">Footnote for measure</h2>
      </caption>
      <thead>
        <tr>
          <th>Code</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <%= render footnote %>
      </tbody>
    </table>
  </article>
</div>
<% end %>

<%= render measure.additional_code if measure.has_additional_code? %>
